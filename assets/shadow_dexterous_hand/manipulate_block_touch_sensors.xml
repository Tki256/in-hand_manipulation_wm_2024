<?xml version="1.0" encoding="utf-8"?>
<mujoco>
    <compiler angle="radian" coordinate="local" meshdir="../stls" texturedir="../textures"></compiler>
    <option timestep="0.002" iterations="20" apirate="200">
        <flag warmstart="enable"></flag>
    </option>

    <include file="shared.xml"></include>
    <include file="shared_touch_sensors_92.xml"></include>

    <asset>
        <include file="shared_asset.xml"></include>

        <texture name="texture:object" file="block.png" gridsize="3 4" gridlayout=".U..LFRB.D.."></texture>
        <texture name="texture:hidden" file="block_hidden.png" gridsize="3 4" gridlayout=".U..LFRB.D.."></texture>

        <material name="MatPlane" specular="0.3" shininess="0.3" rgba="0 0 0 1" />

        <material name="material:object" texture="texture:object" specular="1" shininess="0.3" reflectance="0"></material>
        <material name="material:hidden" texture="texture:hidden" specular="1" shininess="0.3" reflectance="0"></material>
        <material name="material:target" texture="texture:object" specular="1" shininess="0.3" reflectance="0" rgba="1 1 1 0.5"></material>
    </asset>

    <worldbody>
        <geom name="floor0" pos="0.8 0.75 0" size="0.85 0.7 1" type="plane" condim="3" material="floor_mat"></geom>
        <body name="floor0" pos="1 1 0"></body>

        <include file="robot_touch_sensors_92.xml"></include>


        <body name="object" pos="1 0.87 0.2">
            <geom name="object" type="box" size="0.025 0.025 0.025" material="material:object" condim="4" density="567"></geom>
<!--            <geom name="object" type="mesh" mesh="object:scissors" material="material:object" condim="4" density="567"></geom>-->
<!--            <geom name="object_hidden" type="box" size="0.024 0.024 0.024" material="material:hidden" condim="4" contype="0" conaffinity="0" mass="0"></geom>-->
            <site name="object:center" pos="0 0 0" rgba="1 0 0 1" size="0.01 0.01 0.01"></site>
            <joint name="object:joint" type="free" damping="0.01"></joint>
        </body>

<!--        <body name="scissors" pos="1 0.9 0.2">-->
<!--            <geom name="scissors" type="mesh" mesh="object:scissors" material="material:object" condim="4" density="567"></geom>-->
<!--            <geom name="scissors_hidden" type="mesh" mesh="object:scissors" material="material:hidden" condim="4" contype="0" conaffinity="0" mass="0"></geom>-->
<!--            <site name="scissors:center" pos="0 0 0" rgba="1 0 0 0" size="0.01 0.01 0.01"></site>-->
<!--            <joint name="scissors:joint" type="free" damping="0.01"></joint>-->
<!--        </body>-->

<!--        <site name="pos" pos="1.3 0.75 0.45" rgba="0 0 1 1" size="0.01 0.01 0.01"></site>-->
        <body pos="1.3 0.75 0.2" name="table0">
			<geom name="table0" size="0.25 0.35 0.2" type="box" mass="2000" material="table_mat"></geom>
		</body>

        <body name="target" pos="1.3 0.75 0.45">
            <geom name="target" type="mesh" mesh="object:scissors" material="block_mat" condim="3" mass="2"></geom>
<!--            <geom size="0.025 0.025 0.001" type="box" condim="3" name="target" material="block_mat" mass="2"></geom>-->
            <site name="target:center" pos="0 0 0" rgba="1 0 0 1" size="0.01 0.01 0.01"></site>
            <joint name="target:joint" type="free" damping="0.01"></joint>
        </body>

        <light directional="true" ambient="0.2 0.2 0.2" diffuse="0.8 0.8 0.8" specular="0.3 0.3 0.3" castshadow="false" pos="0 1 4" dir="0 0 -1" name="light0"></light>
    </worldbody>
